        <!--&lt;!&ndash; 配置需要扫描的包 &ndash;&gt;-->
        <!--<property name="basePackage" value="com.**.mapper"></property>-->
        <!--<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"></property>-->
    <!--</bean>-->
    <!-- *********配置mapper的bean end********* -->

</beans>