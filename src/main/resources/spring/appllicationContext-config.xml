<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="db_sp_360"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        <property name="url" value="jdbc:sqlserver://360push.topwisesz.com:1289;database=db_sp_360"/>
        <property name="username" value="topwise$user" />
        <property name="password" value="topwise$123" />
    </bean>

    <!-- 使用spring的jdbcTemplate，封装了SQL常用操作方法 -->
    <!--<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">-->
        <!--<property name="dataSource" ref="db_sp_360" />-->
    <!--</bean>-->

    <!-- spring 事务管理 -->
    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="db_sp_360" />
    </bean>

    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="db_sp_360" />
        <property name="configLocation"  value="classpath:mybatis/mybatis-config.xml" />
    </bean>

    <bean id="userMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.topwisesz.topwiseos.webservices.bean.mapper.DeviceMapper" />
        <property name="sqlSessionFactory" ref="sqlSessionFactory" />
    </bean>

    <!-- *********配置mapper的bean start********* -->
    <!--
        配置mybatis的mapper扫描器;
        **可以不需注解,不需bean配置即可成为实例;
        要求mapper接口和其xml同名且在同包下;
        扫描出来的mapper的bean的id为该mapper接口的首字母小写 ;
    -->
